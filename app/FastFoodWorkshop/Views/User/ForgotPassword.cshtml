@model UserExternalLoginViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="ffw-text-brown text-center titleMargin">@ViewData["Title"]</h2>
<div class="formDiv fries01">
    <div class="container-fluid col-mt-1">
        <div class="row justify-content-center">
            <button id="forgotPasswordButton" class="btn btn-default custom-btn">Forgot Password</button>
        </div>
        <div class="row justify-content-center">
            <div id="forgotPasswordPanel" class="col-sm-2 col-md-4 col-lg-6 formDiv">
                <h4 class="ffw-text-brown text-center titleMargin">Forgot Password</h4>
                <hr />
                <form class="mx-auto w-50" method="post">
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="Email" class="ffw-text-brown">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-default custom-btn">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-4">
    <a class="btn btn-default custom-btn" asp-area="" asp-controller=@StringConstants.Home asp-action=@StringConstants.Index>Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $(document).ready(function () {
        $("#forgotPasswordButton").click(function () {
            $("#forgotPasswordPanel").toggle(700)
        });
    });
</script>