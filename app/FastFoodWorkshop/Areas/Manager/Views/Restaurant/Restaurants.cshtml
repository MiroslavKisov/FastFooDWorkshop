@model RestaurantsViewModel
@{
    ViewData["Title"] = "Restaurants";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}

<h2 class="ffw-text-brown text-center titleMargin">Restaurants</h2>
<hr />

@if (Model.Restaurants.Count == 0)
{
    <h2 class="ffw-text-brown text-center titleMargin">No Restaurants</h2>
}
else
{
    <table id="tableCategories" class="table table-striped table-ffw">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Orders</th>
                <th scope="col">Complaints</th>
                <th scope="col">Delivery Cars</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr>
                    <th scope="row">@restaurant.Name</th>
                    <td>@restaurant.Address</td>
                    <td>
                        <div class="justify-content-around">
                            <a class="btn btn-default table-btn" asp-controller="@StringConstants.Products" asp-action="@StringConstants.Edit">View</a>
                        </div>
                    </td>
                    <td>>
                        <div>
                            <a class="btn btn-default table-btn" asp-controller="@StringConstants.Products" asp-action="@StringConstants.Edit">View</a>
                        </div>
                    </td>
                    <td>
                        <div class="justify-content-around">
                            <a class="btn btn-default table-btn" asp-controller="@StringConstants.Products" asp-action="@StringConstants.Edit/@restaurant.Id">Edit</a>
                            <a class="btn btn-default table-btn" asp-controller="@StringConstants.Products" asp-action="@StringConstants.Delete/@restaurant.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="d-flex justify-content-center mt-4">
    <a class="btn btn-default custom-btn" asp-area="@StringConstants.Manager" asp-controller=@StringConstants.Manage asp-action=@StringConstants.Manage>Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


