@model ProductViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}

<h2 class="ffw-text-brown text-center titleMargin">Edit</h2>

<div class="formDiv pizza10">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <button id="productEditButton" class="btn btn-default custom-btn">Edit Product</button>
        </div>
        <div class="row justify-content-center">
            <div id="productEditPanel" class="col-xs-1 col-sm-3 col-md-4 col-lg-6 formDiv">
                <h4 class="ffw-text-brown text-center titleMargin">Edit Product</h4>
                <hr />
                <form method="post" asp-controller=@StringConstants.Products asp-action=@StringConstants.Edit enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="Name" class="ffw-text-brown">Name</label>
                            <input type="text" asp-for="Name" value=@Model.Name name="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="ProteinsQuantity" class="ffw-text-brown">Protein gr.</label>
                            <input type="number" asp-for="ProteinsQuantity" value=@Model.ProteinsQuantity name="ProteinsQuantity" class="form-control" placeholder="Protein gr." />
                            <span asp-validation-for="ProteinsQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="CarbohydratesQuantity" class="ffw-text-brown">Carbohydrates gr.</label>
                            <input type="number" asp-for="CarbohydratesQuantity" value=@Model.CarbohydratesQuantity name="CarbohydratesQuantity" class="form-control" placeholder="Carbohydrates gr." />
                            <span asp-validation-for="CarbohydratesQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="FatQuantity" class="ffw-text-brown">Fat gr.</label>
                            <input type="number" asp-for="FatQuantity" value=@Model.FatQuantity name="FatQuantity" class="form-control" placeholder="Fat gr." />
                            <span asp-validation-for="FatQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="Price" class="ffw-text-brown">Price</label>
                            <input type="number" asp-for="Price" value=@Model.Price name="Price" class="form-control" placeholder="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="CategoryName">Category</label>
                            <select asp-for="CategoryId" name="CategoryId" value=@Model.CategoryId class="form-control" asp-items="ViewBag.Categories">
                                <option selected="selected" disabled="disabled">--Select a Category--</option>
                            </select>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="MenuName">Menu</label>
                            <select asp-for="MenuId" name="MenuId" value=@Model.MenuId class="form-control" asp-items="ViewBag.Menus">
                                <option selected="selected" disabled="disabled">--Select a Menu--</option>
                            </select>
                        </div>
                    </div>
                    <div class="align-self-center">
                        <div class="form-group">
                            <label asp-for="Picture">Upload Picture</label>
                            <input asp-for="Picture" id="Picture" value="@Model.Picture" class="form-control-file" name="Picture">
                            <span asp-validation-for="Picture" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-default custom-btn">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-around mt-4">
    <a class="btn btn-default custom-btn" asp-area="@StringConstants.Manager" asp-controller=@StringConstants.Menu asp-action=@StringConstants.Menus>Menus</a>
    <a class="btn btn-default custom-btn" asp-area="@StringConstants.Manager" asp-controller=@StringConstants.Category asp-action=@StringConstants.Categories>Categories</a>
    <a class="btn btn-default custom-btn" asp-area="@StringConstants.Manager" asp-controller=@StringConstants.Products asp-action=@StringConstants.Products>Products</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $(document).ready(function () {
        $("#productEditButton").click(function () {
            $("#productEditPanel").toggle(700)
        });
    });
</script>
